#!/usr/bin/env bash
set -e

[ -z "$KEEPDEST" ] && rm -rf "$DEST"

(
	if [ -n "$DEST" ] && [ -z "$OUTPUT" ]; then
		OUTPUT="$(dirname "$DEST")/binary"
		export OUTPUT
	fi
	if [ "$(go env GOOS)" = "linux" ]; then
		export DOCKER_LDFLAGS+=" -linkmode=external"
	fi
	export PACKAGE=./cmd/docker-proxy
	. hack/make/.binary
)
